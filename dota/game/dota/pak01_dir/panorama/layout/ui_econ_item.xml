<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/ui_econ_item.vcss_c" />
	</styles>

	<DOTAEconItem>
			<Panel id ="BottomLayer" hittest="false"/>
			<DOTAEconItemImage id="EconItemIcon" scaling="stretch-to-cover-preserve-aspect" />
      <Panel class="LeftRightFlow AttributeIconContainer" >
        <Panel class="Purgatory" onmouseover="DOTAShowTextTooltip( #DOTA_EconItemSet_Tooltip_Purgatory )" onmouseout="DOTAHideTextTooltip(); DOTAUIEconItemRetriggerOnMouseOver()"  />
        <Panel class="Bundle" onmouseover="DOTAShowTextTooltip( #DOTA_EconItemSet_Tooltip_InBundle )" onmouseout="DOTAHideTextTooltip(); DOTAUIEconItemRetriggerOnMouseOver()"  />
        <Panel id ="MultiStyle" class="LeftRightFlow">
				  <Panel class="MultiStyleSubGroup" >
  					<Panel id="MultiStyleIcon" onmouseover="DOTAShowTextTooltip( #DOTA_EconItemSet_Tooltip_MultipleStyles )" onmouseout="DOTAHideTextTooltip(); DOTAUIEconItemRetriggerOnMouseOver()" />
	  				<Panel id="StyleLockedIcon" />
		  		</Panel>
			  	<Label id="StyleIndex" text="#DOTA_UIEconItem_StyleIndex" />
        </Panel>
        <Panel class="MultiTeam" onmouseover="DOTAShowTextTooltip( #DOTA_EconItemSet_Tooltip_MultipleTeams )" onmouseout="DOTAHideTextTooltip()" />
        <Panel class="EmptySocketIcon" onmouseover="DOTAShowTextTooltip( #DOTA_EconItemSet_Tooltip_HasEmptySocket )" onmouseout="DOTAHideTextTooltip(); DOTAUIEconItemRetriggerOnMouseOver()" />
        <Panel class="GemIcon" onmouseover="DOTAShowTextTooltip( #DOTA_EconItemSet_Tooltip_HasCommonGem )" onmouseout="DOTAHideTextTooltip(); DOTAUIEconItemRetriggerOnMouseOver()" />
        <Panel class="RareGemIcon" onmouseover="DOTAShowTextTooltip( #DOTA_EconItemSet_Tooltip_HasRareGem )" onmouseout="DOTAHideTextTooltip(); DOTAUIEconItemRetriggerOnMouseOver()" />
      </Panel>
			<Button id ="Inspect" />
			<Panel id ="Equipped" hittest="false"/>
			<Panel id ="NewItem" hittest="false">
				<Label text="#DOTA_New"/>
			</Panel>
			<Panel id ="TopLayer" hittest="false"/>
			<Label id ="ClearCollection" text="#DOTA_Armory_Category_ScratchPad_Remove" hittest="false"/>
			
	</DOTAEconItem>

</root>
